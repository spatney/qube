{
    "compilerOptions": {
        "lib": [
            "es2016"
        ],
        "outDir": "./dist/",
        "declaration": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "target": "es5",
        "jsx": "react"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
        "**/examples/*"
    ]
}